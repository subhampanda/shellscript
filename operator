1.arithmeic  opeator   
    + - \* / %
2.relation operator
  -lt -> less then 
  -gt -> greater then
  -le -> less then or eqal
  -ge -> greater then or eqal
  -eq -> eqal 
3.logical operator
 -a -o !
4.string operator
  str1 = str2
  str1 != str2  
  
  read a b
  c= `expr $a + $b` 
  echo " $c "
  c= `expr $a - $b`
  echo " $c "
  c= `expr $a /* $b` 
  echo $c
  c= `expr $a / $b`
  echo $c
  c= `expr $a % $b`
  echo $c
  
  
 echo "Enter a number"
 read num
 if [ $num -gt 0 ]
 then
 echo "It is a positive number"
 else
 echo "It is not a positive integer"
 fi
 
 
